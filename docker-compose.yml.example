version: '3.8'
services:
  db:
    image: postgres:15-alpine
    restart: always
    environment:
      POSTGRES_USER: YOUR_DB_USER
      POSTGRES_PASSWORD: YOUR_DB_PASSWORD
      POSTGRES_DB: YOUR_DB_NAME
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

volumes:
  postgres_data: